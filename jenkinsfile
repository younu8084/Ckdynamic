pipeline
{
    agent any
    
   stages{
    stage('Build')
        {
            steps{
              sh 'mvn clean install'
                 }
         }
          
        stage('deploy ansible'){
            steps{
                withCredentials([string(credentialsId: 'ans', variable: 'ansadmin_password')]){
                sh 'sshpass -p ${ansadmin_password} ssh -v -o StrictHostKeyChecking=no ansadmin@ip-172-31-6-239 \"cd /opt/playbooks; wget -O dynamic_new-1.war  /var/lib/jenkins/workspace/ansible/target/dynamic_new-21.war"'
                }
            }
        }
         stage('Executing Playbook'){
            steps{
                withCredentials([string(credentialsId: 'ans', variable: 'ansadmin_password')]){
                    sh 'sudo sshpass -p ${ansadmin_password} ssh -v -o StrictHostKeyChecking=no ansadmin@172-31-6-239  \"ansible-playbook /opt/playbooks/demo.yml\"'
               }
                }
            }
         
         }
          }
         
